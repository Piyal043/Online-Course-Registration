<h1>All Semesters</h1>
<%= link_to "Create new semester", new_semester_path %>
<table>
  <tr>
    <th>Semester Name</th>
  </tr>

  <% @semesters.each do |semester| %>
    <tr>
      <td>[<%= semester.id %>]</td>
      <td><%= semester.name %></td>
      <td><%= link_to 'Edit', edit_semester_path(semester) %></td>
      <td><%= link_to 'Show', semester_path(semester) %></td>
      <td><%= link_to 'Delete', semester_path(semester), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>