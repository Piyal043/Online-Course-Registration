<% if @semester.errors.any? %>
  <h2>Errors</h2>
  <ul>
    <% @semester.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<div class="card-body">
  <%= form_for @semester do |f| %>
      <div class="form-group">
        <%= f.label :Semester_Name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: 'Semester Name', class: 'form-control'%>
      </div>
    <div class="form-group">
      <%= f.label :Status %><br />
      <%= f.radio_button :status, 'true' %>Active
      <%= f.radio_button :status, 'false' %>Not Active
    </div>



      <div class="form-group ">
        <%= f.submit class: 'btn btn-primary'  %>
      </div>
  <% end %>
</div>

<%= link_to "Back to Semester list", semesters_path, class: "btn btn-primary" %>
