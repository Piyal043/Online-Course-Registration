<% if @semester.errors.any? %>
  <h2>Errors</h2>
  <ul>
    <% @semester.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @semester do |f| %>
  <p>
    <%= f.label :Name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back to Semester list", semesters_path %>
